<p id="notice"><%= notice %></p>

<p>
  <strong>Schedule:</strong>
  <%= @game.schedule %>
</p>

<p>
  <strong>Team 1:</strong>
  <%= @game.team_1 %>
</p>

<p>
  <strong>Team 2:</strong>
  <%= @game.team_2 %>
</p>

<p>
  <strong>Comments:</strong>
  <% @comments.each do |comment| %>
    <%= comment.author %> | Team: <%= comment.team %> |
    <%= image_tag('arrow_down.png', {id: "rank_down", class: "arrow"}) %> <%= comment.rank %> <%= image_tag('arrow_up.png', {id: "rank_up", class: "arrow"}) %>
    <p><%= comment.created_at %></p>
    <p><%= comment.body %></p>

  <% end %>
</p>

<strong>Add a comment:</strong>
<%= form_for([@game, @game.comments.build]) do |f| %>
 <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :team %><br>
    <%= f.select :team, options_for_select([@game.team_1, @game.team_2]) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %> |

